<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si existe un archivo o directorio real, usarlo
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Si no, enviar todo a index.html (SPA: Vue Router se encarga de la ruta)
  RewriteRule . /index.html [L]
</IfModule>
